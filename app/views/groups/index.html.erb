      <!-- start: Content -->
<div id="content" class="col-sm-11">
  <div class="row">
    <div class="col-lg-12">
      <div class="box">
        <div class="box-header" data-original-title>
          <h2><i class="fa fa-user"></i><span class="break"></span>Groups</h2>
          <div class="box-icon">
            <a href="#" class="btn-setting"><i class="fa fa-wrench"></i></a>
            <a href="#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
            <a href="#" class="btn-close"><i class="fa fa-times"></i></a>
          </div>
        </div>

        <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">      

  <thead>
    <tr>
      <th>Name</th>    
      <th>Alias</th>
      <th>Description</th>
      <th>Telegram ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>

      <tr>
        <td><%= group.name %></td>
        <td><%= group.group_alias %></td>
        <td><%= group.description %></td>
        <td><%= group.telegram_id %>
        <td><%= link_to 'Show', group %></td>
        <td>
          <% if can? :update, @groups %>
            <%= link_to 'Edit', edit_group_path(group) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, @groups %>
            <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
            </td>
      </tr>
    <% end %>
  </tbody>
</table>