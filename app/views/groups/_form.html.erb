
<%= form_for(@group, :html => {:class => 'form-horizontal'}) do |f| %>
  <%= render 'shared/error_messages', :local_model => @group %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-sm-2'  %><div class="col-sm-6">
    <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :group_alias, :class => 'control-label col-sm-2'  %><div class="col-sm-6">
    <%= f.text_field :group_alias, label: 'Inform duration: ', :class => 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telegram_id, :class => 'control-label col-sm-2'  %><div class="col-sm-6">
    <%= f.text_field :telegram_id, label: 'Inform duration: ', :class => 'form-control'%>
    </div>
  </div>  
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-sm-2'  %>
    <div class="col-sm-6">
      <%= f.text_area :description, :class => 'form-control', :row => '5'%>
    </div>
  </div>


  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
